<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

                <RelativeLayout
                    android:id="@+id/rellay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/route_item"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:paddingLeft="15dp"
                        android:fontFamily="sans-serif-black"
                        android:textSize="22sp"
                        android:textColor="@color/darkBlue"
                        android:text="TextView"
                         />

                    <ImageView
                        android:id="@+id/routeIcon"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/route_item"
                        tools:srcCompat="@drawable/ic_route_icon" />
<!--                    <TextView-->
<!--                        android:id="@+id/milesAway"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->

<!--                        android:layout_toRightOf="@id/route_item"-->
<!--                        android:layout_marginTop="10dp"-->
<!--                        android:layout_weight="1"-->
<!--                        tools:text="@string/miles_away" />-->

                    <RelativeLayout
                        android:id="@+id/expandableView"
                        android:layout_width="match_parent"
                        android:layout_marginTop="50dp"
                        android:visibility="gone"
                        android:layout_height="170dp">

                        <TextView
                            android:id="@+id/restaurant1"
                            android:textSize="20dp"
                            android:layout_width="350dp"                            android:fontFamily="sans-serif-medium"
                            android:layout_height="wrap_content"
                            android:textColor="@color/royalBlue"
                            android:layout_marginStart="10dp"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:text="restaurant2"
                         />

                        <TextView
                            android:id="@+id/restaurant2"
                            android:textSize="20dp"
                            android:layout_width="350dp"                            android:fontFamily="sans-serif-medium"
                            android:layout_height="wrap_content"
                            android:textColor="@color/royalBlue"
                            android:layout_marginStart="10dp"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="4dp"
                            android:text="restaurant2"
                            android:layout_below="@id/restaurant1"
                            />



                        <TextView
                            android:id="@+id/restaurant3"
                            android:textSize="20dp"
                            android:layout_width="350dp"                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingLeft="15dp"
                            android:textColor="@color/royalBlue"
                            android:layout_marginTop="4dp"
                            android:text="restaurant3"
                            android:fontFamily="sans-serif-medium"
                            android:layout_below="@id/restaurant2"
                             />

                        <TextView
                            android:id="@+id/restaurant4"
                            android:textSize="20dp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="350dp"                            android:textColor="@color/royalBlue"
                            android:paddingLeft="15dp"                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"

                            android:text="restaurant4"
                            android:layout_below="@id/restaurant3"
                           />

                        <Button
                            android:id="@+id/startRoutebtn"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_below="@+id/restaurant4"
                            android:textAlignment="center"
                            android:background="@drawable/fill_btn"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="10dp"
                            android:text="Start Route"
                            android:textAllCaps="false"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </RelativeLayout>



                </RelativeLayout>



            </androidx.cardview.widget.CardView>




</RelativeLayout>